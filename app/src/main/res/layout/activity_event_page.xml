<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context="com.example.badr.happysync.EventPage">



    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:layout_marginTop="50dp"

        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="100dp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardElevation="20dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/mapheader"
                android:background="@drawable/eventheader"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/returnbtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/returnicon"
                    android:backgroundTint="#FFF"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/mappagetitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:text="Evenements"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/returnbtn"
                    android:layout_marginLeft="20dp"

                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#00000000"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="10dp"
        android:layout_height="120dp">
        <EditText
            android:id="@+id/searchBar2"
            android:background="@drawable/roundeditext2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Chercher arrÃ©t, Hopital..."
            android:textColorHint="#565656"
            android:paddingLeft="20dp"
            android:textColor="#000"
            android:imeOptions="actionSearch"
            android:layout_alignParentBottom="true"
            android:inputType="text"
            />


        <Button
            android:id="@+id/voicesearchevent"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignEnd="@id/searchBar2"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/roundbtn"
            android:backgroundTint="#4b134f"
            android:paddingTop="12dp"
            android:clickable="true"
            android:drawableTop="@drawable/voices" />
        <!--<android.support.design.widget.FloatingActionButton
            android:id="@+id/myplace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:backgroundTint="#FFFFFF"
            android:clickable="true"
            app:srcCompat="@drawable/maplaceholder" />-->
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>

